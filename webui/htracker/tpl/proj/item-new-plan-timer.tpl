<div class="htracker-modal-container">
<div id="htracker-projset-plan-timer-alert" class="alert less-hide"></div>
<div class="form-group row">
  <label class="col-sm-3 col-form-label">{[=l4i.T("Time of interval")]}</label>
  <div class="col-sm-9">
    <input type="text" class="form-control inputfocus" id="htracker_projset_plan_time_interval" value="{[=it.plan.interval]}">
	<p class="form-text text-muted">{[=it._hint_interval]}</p>
  </div>
</div>
<div class="form-group row">
  <label class="col-sm-3 col-form-label">{[=l4i.T("Time of duration")]}</label>
  <div class="col-sm-9">
    <input type="text" class="form-control inputfocus" id="htracker_projset_plan_time_duration" value="{[=it.plan.duration]}">
	<p class="form-text text-muted">{[=it._hint_duration]}</p>
  </div>
</div>
</div>
